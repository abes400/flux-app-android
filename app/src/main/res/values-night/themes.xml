<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Flux" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>

        <item name="android:colorBackground">@color/dark_gray</item>

        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondaryContainer">@color/primary_dark</item>

    </style>

    <style name="Theme.Flux" parent="Base.Theme.Flux" />

    <style name="Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/none</item>
        <item name="android:windowBackground">@drawable/gradient_dark</item>
    </style>

    <style name="MCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/gray</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/light_green</item>
        <item name="trackTint">@color/dark_down_shade</item>
    </style>

    <style name="TButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/TButtonOverlay</item>
    </style>

    <style name="TButtonOverlay">
        <item name="colorPrimary">@color/white</item>
    </style>
</resources>